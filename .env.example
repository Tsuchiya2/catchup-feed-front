# =============================================================================
# catchup-feed-frontend Environment Variables
# =============================================================================
# Copy this file to .env and modify as needed:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
# Options: development, production, test
NODE_ENV=development

# =============================================================================
# Application Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Identity
# -----------------------------------------------------------------------------
# Application name (used in metadata and PWA manifest)
NEXT_PUBLIC_APP_NAME="Catchup Feed"

# Short application name (used in PWA manifest)
NEXT_PUBLIC_APP_SHORT_NAME=Catchup

# Application description (used in metadata)
NEXT_PUBLIC_APP_DESCRIPTION="Your personal feed aggregator and reader"

# Application Base URL (for metadata and social sharing)
# Production: Set your production URL
# NEXT_PUBLIC_APP_URL=https://catchup-feed.com

# For Vercel: VERCEL_URL is automatically provided
# Fallback chain: NEXT_PUBLIC_APP_URL > VERCEL_URL > localhost:3000

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL for Docker development environment
# Uses Docker network service name to communicate with catchup-feed backend
NEXT_PUBLIC_API_URL=http://app:8080

# Alternative: If running backend outside Docker (on host machine)
# NEXT_PUBLIC_API_URL=http://localhost:8080

# For production (Vercel): Set in Vercel Dashboard Environment Variables
# Raspberry Pi 5 backend via Cloudflare Tunnel
# NEXT_PUBLIC_API_URL=https://catchup.catchup-feed.com

# API timeout in milliseconds (default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# Number of retry attempts on API failure (default: 3)
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Delay between retry attempts in milliseconds (default: 1000)
NEXT_PUBLIC_API_RETRY_DELAY=1000

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Token refresh threshold in seconds (default: 300 = 5 minutes)
# Refresh token when less than this time remains until expiry
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=300

# Grace period in seconds after token expiry to attempt refresh (default: 60)
NEXT_PUBLIC_TOKEN_GRACE_PERIOD=60

# =============================================================================
# Feature Flags
# =============================================================================

# Enable Progressive Web App features (default: false)
NEXT_PUBLIC_FEATURE_PWA=false

# Enable dark mode toggle (default: true)
NEXT_PUBLIC_FEATURE_DARK_MODE=true

# Enable AI summary feature (default: false)
NEXT_PUBLIC_FEATURE_AI_SUMMARY=false

# Enable automatic token refresh (default: true)
NEXT_PUBLIC_FEATURE_TOKEN_REFRESH=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warn, error
# Default: debug (development), warn (production), error (test)
NEXT_PUBLIC_LOG_LEVEL=debug

# Log output format: json, pretty
# Default: pretty (development), json (production)
NEXT_PUBLIC_LOG_FORMAT=pretty

# Log sample rate (0.0 to 1.0) - 1.0 logs everything (default: 1.0)
NEXT_PUBLIC_LOG_SAMPLE_RATE=1.0

# Enable console logging (default: true)
NEXT_PUBLIC_LOG_ENABLE_CONSOLE=true

# =============================================================================
# Observability Configuration
# =============================================================================

# Sentry DSN for error tracking (optional)
# Get this from your Sentry project settings
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment name (default: same as NODE_ENV)
# NEXT_PUBLIC_SENTRY_ENV=production

# Sentry traces sample rate (0.0 to 1.0) - 0.1 = 10% (default: 0.1)
# Controls what percentage of transactions are sent to Sentry
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# Enable custom metrics collection (default: false)
# Metrics are sent to Sentry for business and performance tracking
NEXT_PUBLIC_ENABLE_METRICS=false

# -----------------------------------------------------------------------------
# Development Options
# -----------------------------------------------------------------------------
# Enable file system polling for hot reload
# Required on macOS/Windows if hot reload doesn't work with native file watching
WATCHPACK_POLLING=true

# Disable Next.js telemetry (optional)
# NEXT_TELEMETRY_DISABLED=1
